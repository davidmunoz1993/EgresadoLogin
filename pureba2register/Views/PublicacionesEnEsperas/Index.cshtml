@model IEnumerable<pureba2register.Models.PublicacionesEnEspera>

@{
    ViewBag.Title = "Index";
}

<h2>Publicaciones en espera</h2>

<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaFinalizacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Asunto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Informacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FechaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaFinalizacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Asunto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Informacion)
        </td>
        <td>
            <a class="colorBoton" href="/PublicacionesEnEsperas/Edit/@item.PublicacionEnEspera">Editar<samp class="glyphicon glyphicon-edit"> </samp></a>

        <td> <a class="colorBoton" href="/PublicacionesEnEsperas/Details/@item.PublicacionEnEspera">Detalles<samp class="glyphicon glyphicon-exclamation-sign"> </samp></a></td>

        <td> <a class="colorBoton" href="/PublicacionesEnEsperas/Delete/@item.PublicacionEnEspera">Eliminar<samp class="glyphicon glyphicon-trash"> </samp></a></td>

        </td>
    </tr>
}

</table>
